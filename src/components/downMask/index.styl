.mask
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0, 0, 0, .01)
  display flex
  align-items center
  justify-content center
  z-index 999
  img
    position absolute
    bottom 0
    right 0
    top 0
    left 0
    width 100%
    height 100%
  div
    margin-top 50px
    p
      color #fff
      text-align left
      margin-bottom 5px
      font-size 20px
