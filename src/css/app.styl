@import 'normalize.css'
// app global css
.one-line-ellipsis 
    overflow: hidden
    text-overflow:ellipsis
    white-space: nowrap

  *{
    margin:0;
    padding:0;
  }

ul,li {
list-style: none
}
body {
  font-size: 15px;
}

.primary-color{
  color:$primary!important;
}

.tip-btn-color{
  color:$tip-btn-color!important;
}

.btn-checked{
  background-color: $primary!important;
  color:white;
}

.btn-function{
  border: 1px solid $primary!important;
  color: $primary!important;
  background-color: white!important;
}

.warn-color{
  color:red;
}

.status-3{
    color:#04BAFE !important;
  }

  .status-4{
    color:#8DD149 !important;
  }
  .status-5{
    color:#FE4439 !important;
  }

    .common-bg-lay{
    width:100%;
    height:100%;
    position:fixed;
    top:0;
    left:0;
    background:rgba(0,0,0,0.5);
    z-index:9998;
  }

input,textarea{
    border:none;
    resize:none;
  }
  .bold-bottom-border{
    border-bottom:9px solid #e6e6e6;
  }
  .thin-bottom-border{
    border-bottom:1px solid #e6e6e6;
  }
  textarea,input{
    outline:none;
  }

