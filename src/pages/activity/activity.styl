.activity
  .title
    font-size 18px
    color #222
    font-weight bold
  .head
    padding 20px 4% 10px
    &-box
      width 100%
      height 190px
      > img
        width 100%
        height 100%
        border-radius 10px
    &-name
      font-size 17px
      color #222222
      font-weight bold
      margin-top 5px
    &-text
      font-size 12px
      color #333333
      padding 5px 0
      border-bottom 1px solid #EEEEEE
      > span:first-child
        margin-right 15px
    &-list
      margin-top 5px
      > img
        width 20px
        vertical-align middle
      > span
        font-size 12px
        color #333333
        margin-left 5px
  .discribe
    padding 0 4%
    margin 20px 0
    p
      color #999
      word-break beak-all
      margin 0
    /deep/ img
      width 100% !important
  .order-btn
    margin 10px 4% 20px
    width 92%
    height 46px
    border-radius 30px
    background #007BFF
    font-size 15px
    color #fff
    text-align center
    line-height 46px
