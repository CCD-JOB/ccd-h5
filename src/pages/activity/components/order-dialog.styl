.dialog-content
  width 85%
  height 250px
  border-radius 10px !important
  background #fff
  position relative
  .dialog-head
    margin-top 8px
    overflow hidden
    height 50px
    border-bottom 1px solid #eee
    line-height 50px
    font-size 17px
    color #222
    text-align center
    font-weight bold
  .close
    position absolute
    top 0
    right 0
  .dialog-body
    .input-wrapper
      width 84%
      position relative
      margin 15px 8%
      span
        position absolute
        top 9px
        left 5px
        font-weight bold
      .input
        width 100%
        padding 10px 20px 10px 50px
        background #F8F8F8
        border-radius 8px
    .warn-text
      font-size 11px
      color #F84E4D
      text-align center
      margin-top 10px
    .q-field__control
      border-radius 8px
    .q-field__label
      font-weight bold
      color #000
  .bottom-btn
    position absolute
    bottom 0
    left 0
    border-top 1px solid #F1F1F1
    display flex
    width 100%
    height 50px
    line-height 50px
    text-align center
    > div
      width 50%
    > div:first-child
      border-right 1px solid #F1F1F1
      color #999999
      font-weight 550
    > div:last-child
      color #222222
      font-weight bold
