.brand-home
  .head
    position relative
    &-box
      width 100%
      height 230px
      > img
        width 100%
        height 100%
      &.spec
        height 150px
    &-content
      width 100%
      min-height 50px
      background #fff
      position absolute
      top 180px
      left 0
      border-radius 0 50px 0 0
      &.spec
        top 100px
      .head-logo
        padding 10px 0 0 100px
        .logo
          width 65px
          height 65px
          background #eee
          position absolute
          left 20px
          top -25px
          box-shadow 0 8px 40px rgba(120, 120, 120, .16)
          border-radius 5px
          img
            width 100%
            height 100%
            border-radius 5px
        .logo-title
          > span:first-child
            font-size 19px
            color #222222
            font-weight bold
          > span:last-child
            font-size 11px
            color #E8B95C
            padding 3px 5px
            background #222222
            border-radius 3px
            margin-left 10px
    .discribe
      margin-top 20px
      padding 0 4%
  .brand-tab
    margin-top 20px
    ul
      display flex
      > li
        font-size 18px
        color #999999
        margin-left 20px
      .li-active
        font-weight bold
        position relative
        color #222
        &:before
          content ''
          width 20px
          position absolute
          bottom -5px
          left 0
          border-bottom 3px solid #007BFF
    .tab-content
      width 100%
      padding 0 4%
      margin-top 10px
