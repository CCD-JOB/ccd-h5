.brand-pay
  .head
    position relative
    &-box
      width 100%
      height 230px
      > img
        width 100%
        height 100%
      &.spec
        height 150px
    &-content
      width 100%
      min-height 50px
      background #fff
      position absolute
      top 180px
      left 0
      border-radius 0 50px 0 0
      &.spec
        top 100px
      .head-logo
        padding 10px 0 0 100px
        .logo
          width 65px
          height 65px
          background #eee
          position absolute
          left 20px
          top -25px
          box-shadow 0 8px 40px rgba(120, 120, 120, .16)
          border-radius 5px
          img
            width 100%
            height 100%
            border-radius 5px
        .logo-title
          > span:first-child
            font-size 19px
            color #222222
            font-weight bold
          > span:last-child
            font-size 11px
            color #E8B95C
            padding 3px 5px
            background #222222
            border-radius 3px
            margin-left 10px
    .discribe
      margin-top 20px
      padding 0 4%
  .relate
    padding 0 20px
    h2
      font-size 18px
      font-weight bold
    &-tab
      display flex
      justify-content flex-start
      align-items center
      &.hasMore
        justify-content space-around
      > li
        font-size 14px
        color #999999
      .li-active
        font-weight 700
        position relative
        color #007BFF
        &:before
          content ''
          width 20px
          position absolute
          bottom -5px
          left 0
          border-bottom 3px solid #007BFF
    &-tab-content
      margin-top 20px
      > li
        font-size 13px
        color #999999
        line-height 38px
        border-bottom 1px solid #EEEEEE
        display flex
        align-items center
        justify-content space-between
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
    &-no-content
      margin-top 20px
      font-size 13px
      color #999999
      line-height 38px
      margin-bottom 0
  .brand-tab
    margin-top 20px
    ul
      display flex
      > li
        font-size 18px
        color #999999
        margin-left 20px
      .li-active
        font-weight bold
        position relative
        color #222
        &:before
          content ''
          width 20px
          position absolute
          bottom -5px
          left 0
          border-bottom 3px solid #007BFF
    .tab-content
      width 100%
      padding 0 4%
      margin-top 10px
  .adBanner
    display flex
    height 49px
    position fixed
    bottom 0
    left 0
    right 0
    .left
      width 70%
      background #222222
      line-height 49px
      img
        width 78px
        height 27px
        margin 11px 0 0 28px
    .right
      width 30%
      background #16308F
      color #fff
      text-align center
      line-height 49px
  .mask
    position fixed
    top 0
    left 0
    right 0
    bottom 62px
    background rgba(0, 0, 0, .5)
    display flex
    align-items center
    justify-content center
    img
      position absolute
      bottom 0
      right 0
      width 100%
      height 100%
    div
      margin-top 50px
      p
        color #fff
        text-align left
        margin-bottom 5px
        font-size 20px
