.counselor-box
  padding-bottom 20px
  overflow hidden
  .title
    font-size 18px
    color #222
    font-weight bold
  .discribe
    margin-top 110px
    padding 10px 4%
  .qiang
    margin-top 20px
    padding 0 4%
    ul
      display flex
      flex-wrap wrap
      > li
        margin-right 10px
        margin-top 10px
        padding 5px 15px
        background #EEEEEE
        color #999
        font-size 13px
  .card
    padding 0 4%
    margin-top 20px
    width 100%
    .card-list
      padding-top 10px
      overflow-x auto
      overflow-y hidden
      ul
        display flex
        flex-wrap nowrap
        > li
          width 150px
          height 100px
          margin-right 15px
          img
            width 150px
            height 100px
  .honor
    padding 0 4%
    margin-top 20px
    ul
      margin-top 5px
      > li
        position relative
        margin-top 5px
        width 100%
        font-size 13px
        line-height 20px
        color #999
        display flex
        justify-content space-between
        align-items center
        img
          position absolute
          width 100%
          height 20px
          opacity 0
          z-index 9
        span
          margin-right 5px
        i
          font-size 13px
  .work
    padding 0 4%
    padding-bottom 10px
    margin-top 20px
    border-bottom 1px solid #EEEEEE
  .education
    padding 0 4%
    margin-top 20px
  .fengcai
    padding 0 4%
    margin-top 20px
  .phone-select
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, .5)
    display flex
    justify-content center
    align-items center
    .wrapper
      padding 20px
      width 80%
      background #fff
      border-radius 5px
      h3
        font-size 16px
        font-weight bold
      a
        text-decoration none
        color #000
      p
        font-size 14px
        font-weight 500
