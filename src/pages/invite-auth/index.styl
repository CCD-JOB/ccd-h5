.invite-auth-wrapper
  background #fff
  .top-wrapper
    position fixed
    top 0
    left 0
    width 100%
    height 90px
    background #fff
    padding 0 16px
    display flex
    justify-content flex-start
    align-items center
    box-shadow 0 12px 48px rgba(154, 154, 154, .12)
    border-radius 0 0 20px 20px
    .left
      padding-right 16px
      img
        width 44px
        height 44px
    .right
      p
        font-size 12px
        margin 0
        &:nth-of-type(1)
          font-size 14px
          font-weight bold
        &:nth-of-type(2)
          font-size 10px
          color #999999
  .center-wrapper
    width 100%
    margin-top 108px
    margin-bottom 80px
    display flex
    background #fff
    .left
      width 20%
      position fixed
      left 0
      top 108px
      bottom 0
      border-right 1px solid #D7D7D7
    .navs
      width 100%
      height 465px
      overflow-y scroll
      // padding-bottom 30px
      li
        padding 0 10px
        font-size 12px
        color #BFBFBF
        height 50px
        line-height 50px
        &.active
          color #007BFF
          font-weight bold
        &:nth-of-type(1)
          padding-top 0
    .right
      width 80%
      margin-left 20%
    img
      width 100%
  .btn-wrapper
    height 80px
    background #fff
    position fixed
    left 0
    right 0
    bottom 0
    display flex
    justify-content space-around
    align-items center
    button
      width 48%
      height 40px
      border none
      background #EEEEEE
      color #999999
      font-weight 550
      list-style none
      border-radius 4px
      border 2px solid rgba(238, 238, 238, 1)
      &:nth-of-type(2)
        background #007BFF
        color #fff
        border none
  .weixinAuth
    background #007BFF
    color #fff
    position fixed
    bottom 10px
    left 0
    right 0
    margin 0 auto
    width 90%
    border none
    height 40px
    border-radius 6px
