.stocks-box
  width 100%
  padding 0 4%
  margin-top 50px
  .stocks-list
    .stocks-head
      width 100%
      height 45px
      border 1px solid rgba(238, 238, 238, 1)
      line-height 45px
      font-size 12px
      color #333333
      border-left 4px solid #007BFF
      > i
        margin 0 10px
  ul
    margin-top 15px
    > li
      width 98%
      margin-left 2%
      min-height 47px
      border 1px solid rgba(238, 238, 238, 1)
      font-size 12px
      color #333333
      border-left 4px solid #F3698A
      margin-top 10px
      padding 5px 10px
      .clearfix
        clear both
        display block
        content ''
      .list-fl
        display flex
        justify-content flex-start
      .list-big
        background rgba(0, 123, 255, .1)
        color #007BFF
        height 20px
        line-height 20px
        text-align center
        font-size 10px
        padding 1px 3px
        margin 5px 5px 5px 0
      .list-title
        color #333
      .stocks-key
        color #6E6E6E
      .stocks-val
        color #A6783A
        margin 0 15px 0 5px
    .li-big
      border-left 4px solid #F5AA4B
